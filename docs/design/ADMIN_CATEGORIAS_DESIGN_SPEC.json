      },
      "update": {
        "endpoint": "PUT /api/admin/categorias/:id",
        "modal": "FormularioCategoria modo='editar' categoria={...}",
        "fields": "nombre, icono, color, orden, activo"
      },
      "delete": {
        "endpoint": "DELETE /api/admin/categorias/:id",
