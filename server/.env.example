# Configuración del servidor
PORT=4000
NODE_ENV=development

# Base de datos SQLite
DB_PATH=./data.db

# Servidores de tiles (separados por comas)
TILE_PROXY_HOSTS=a.tile.openstreetmap.org,b.tile.openstreetmap.org,c.tile.openstreetmap.org

# Google OAuth (opcional - solo si quieres habilitar login con Google)
# Obtén estas credenciales en: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=tu-client-id-aqui.apps.googleusercontent.com

# ═══════════════════════════════════════════════════════════════
# SEGURIDAD (REQUERIDO EN PRODUCCIÓN)
# ═══════════════════════════════════════════════════════════════

# Clave de cifrado AES-256 para datos sensibles (64 caracteres hex)
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# ═══════════════════════════════════════════════════════════════
# PUSH NOTIFICATIONS (Web Push)
# ═══════════════════════════════════════════════════════════════

# Claves VAPID - Generar con: node -e "const wp=require('web-push');const k=wp.generateVAPIDKeys();console.log(k)"
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=mailto:admin@tudominio.gob.mx

# ═══════════════════════════════════════════════════════════════
# SMS (Twilio - Opcional)
# ═══════════════════════════════════════════════════════════════

# Credenciales Twilio (obtener en https://console.twilio.com)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+521234567890
SMS_ENABLED=false

# ═══════════════════════════════════════════════════════════════
# LOGGING
# ═══════════════════════════════════════════════════════════════

LOG_LEVEL=info
LOG_DIR=./logs
ENABLE_FILE_LOGS=true

# ═══════════════════════════════════════════════════════════════
# ALERTAS AUTOMÁTICAS
# ═══════════════════════════════════════════════════════════════

# Habilitar sistema de alertas (true/false)
ALERTS_ENABLED=true

# Umbral de reportes pendientes antes de alertar
ALERT_THRESHOLD_PENDING=10

# SLA: Horas máximas sin asignar un reporte
SLA_HOURS_ASSIGN=24

# SLA: Horas máximas para cerrar un reporte
SLA_HOURS_CLOSE=72

# Factor para detección de anomalías (2.0 = alerta si hay 2x el promedio)
ALERT_ANOMALY_FACTOR=2.0

# Intervalo de verificación automática (minutos)
ALERT_CHECK_INTERVAL=30
