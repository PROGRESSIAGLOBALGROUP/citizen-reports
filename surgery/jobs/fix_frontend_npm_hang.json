{
  "name": "fix_frontend_npm_hang",
  "description": "Fix hanging npm install in client directory by clearing cache and reinstalling",
  "target_file": "client/package-lock.json",
  "operation": "delete_and_reinstall",
  "steps": [
    {
      "type": "terminal",
      "command": "cd client && npm cache clean --force",
      "description": "Clear npm cache"
    },
    {
      "type": "file_delete",
      "target": "client/package-lock.json",
      "description": "Remove corrupted package-lock.json"
    },
    {
      "type": "directory_delete", 
      "target": "client/node_modules",
      "description": "Remove node_modules directory"
    },
    {
      "type": "terminal",
      "command": "cd client && npm install",
      "description": "Fresh npm install"
    },
    {
      "type": "terminal",
      "command": "cd client && npm run dev",
      "description": "Start frontend development server",
      "background": true
    }
  ],
  "validation": {
    "check_port": 5173,
    "check_url": "http://localhost:5173"
  }
}