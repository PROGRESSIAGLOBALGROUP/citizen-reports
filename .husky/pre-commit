#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# ============================================================================
# PRE-COMMIT HOOK: Structure Validation + Lint
# Authority: .meta/FILE_STRUCTURE_PROTOCOL.md
# Generated: Nov 16, 2025
# ============================================================================

# Color codes
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m'

# Files that are ALLOWED in root (exceptions)
ALLOWED_IN_ROOT="README.md CHANGELOG.md package.json package-lock.json .gitignore .gitattributes .editorconfig .prettierrc.json .eslintrc.json LICENSE jest.config.cjs ecosystem.config.cjs"

# Get staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM 2>/dev/null | grep -v '/' || true)

VIOLATION_COUNT=0

# Check each staged file in root for violations
for FILE in $STAGED_FILES; do
    FILENAME=$(basename "$FILE")
    
    # Skip if in ALLOWED_IN_ROOT
    IS_ALLOWED=false
    for ALLOWED in $ALLOWED_IN_ROOT; do
        if [ "$FILENAME" = "$ALLOWED" ]; then
            IS_ALLOWED=true
            break
        fi
    done
    
    if [ "$IS_ALLOWED" = true ]; then
        continue
    fi
    
    # Check for violations
    VIOLATION=""
    if echo "$FILENAME" | grep -qE '\.md$' && [ "$FILENAME" != "README.md" ] && [ "$FILENAME" != "CHANGELOG.md" ]; then
        VIOLATION="docs/"
    elif echo "$FILENAME" | grep -q '\.ps1$'; then
        VIOLATION="scripts/"
    elif echo "$FILENAME" | grep -qE '\.yml$|\.yaml$'; then
        VIOLATION="config/docker/ or config/traefik/"
    elif echo "$FILENAME" | grep -q '\.conf$'; then
        VIOLATION="config/nginx/"
    elif echo "$FILENAME" | grep -qE '^(pm2-|ecosystem\.)' && echo "$FILENAME" | grep -q '\.cjs$'; then
        VIOLATION="config/pm2/"
    elif echo "$FILENAME" | grep -q '^docker-compose'; then
        VIOLATION="config/docker/"
    elif echo "$FILENAME" | grep -q '^Dockerfile'; then
        VIOLATION="config/docker/"
    elif echo "$FILENAME" | grep -q '^nginx-'; then
        VIOLATION="config/nginx/"
    elif echo "$FILENAME" | grep -q '^traefik-'; then
        VIOLATION="config/traefik/"
    fi
    
    if [ -n "$VIOLATION" ]; then
        echo -e "${RED}❌ ${FILENAME}${NC} → Should be in: ${VIOLATION}"
        VIOLATION_COUNT=$((VIOLATION_COUNT + 1))
    fi
done

# Block commit if violations found
if [ $VIOLATION_COUNT -gt 0 ]; then
    echo ""
    echo -e "${RED}════════════════════════════════════════════════════${NC}"
    echo -e "${RED}⛔ COMMIT BLOQUEADO: Archivos violan estructura${NC}"
    echo -e "${RED}════════════════════════════════════════════════════${NC}"
    echo "Mueve archivos a ubicación correcta y reintentar"
    echo "Ref: .meta/FILE_STRUCTURE_PROTOCOL.md"
    echo ""
    exit 1
fi

# Continue with lint-staged
npx --no-install lint-staged

